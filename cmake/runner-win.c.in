#include <stdio.h>
#include <process.h>
#include <stdlib.h>

char *argv[2];

void run(char *command, char *arg);

void run(char *command, char *arg) {
  printf("%s %s\n", command, arg);
  argv[0] = command;
  argv[1] = arg;
  _spawnv(P_WAIT, command, (const char * const *) argv);
}

int main(int argc, char *argv[]) {

  run("@CMAKE_COMMAND@", "@PROJECT_SOURCE_DIR@");
  run("@MOAI_BINARY_PATH@", "@PROJECT_TARGET@");

  (void) argc;
  (void) argv;

  return 0;
}
