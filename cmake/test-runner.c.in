#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>

void run(char *command) {
  printf("%s\n", command);
  system(command);
}

int main(int argc, char *argv[]) {

  chdir("@PROJECT_BINARY_DIR@");
  run("\"@MOAI_BINARY_PATH@\" \"@TEST_PROJECT_TARGET@\"");

  FILE *fp = fopen("@TEST_OUTPUT_PATH@", "r");
  int rtn = fp == NULL ? 1 : 0;

  return rtn;
}
